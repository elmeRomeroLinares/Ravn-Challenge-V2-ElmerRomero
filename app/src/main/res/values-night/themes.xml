<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RavnChallengeV2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/ravn_black</item>
        <item name="colorOnPrimary">@color/ravn_text_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/ravn_black</item>
        <item name="colorOnSecondary">@color/ravn_text_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="h2_default">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h2_text_size</item>
    </style>
    <style name="p1_low_emphasis">
        <item name="android:textColor">@color/half_black</item>
        <item name="android:textSize">@dimen/p1_text_size</item>
    </style>
    <style name="h2_low_emphasis">
        <item name="android:textColor">@color/ravn_text_light</item>
        <item name="android:textSize">@dimen/h2_text_size</item>
    </style>
    <style name="fixed_detail_text_view" parent="h2_low_emphasis">
        <item name="android:paddingTop">@dimen/data_cell_top_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/data_cell_top_bottom_padding</item>
    </style>
    <style name="dynamic_detail_text_view" parent="h2_default">
        <item name="android:paddingTop">@dimen/data_cell_top_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/data_cell_top_bottom_padding</item>
    </style>
    <style name="dynamic_vehicle_text_view" parent="fixed_detail_text_view"/>
    <style name="toolbar_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h2_text_size</item>
    </style>
</resources>